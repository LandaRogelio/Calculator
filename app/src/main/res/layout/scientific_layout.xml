<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:weightSum="1.0"
    tools:context=".MainActivity"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_weight=".1"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textOutput"
            android:inputType="text"
            android:ellipsize="end"
            android:gravity="end"
            android:textSize="30sp"
            android:textColor="@color/button_text"
            />
        <Button
            android:text="Del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@color/button_normal"
            android:textColor="@color/button_text"
            android:id="@+id/delete" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="4"
        android:layout_weight=".9"
        android:orientation="vertical">

        <Button
            android:text="SIN"
            android:layout_height="@dimen/gridbox"
            android:layout_width="@dimen/gridbox"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@color/button_normal"
            android:textColor="@color/button_text"
            android:id="@+id/sin" />
        <Button
            android:text="COS"
            android:layout_height="@dimen/gridbox"
            android:layout_width="@dimen/gridbox"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@color/button_normal"
            android:textColor="@color/button_text"
            android:id="@+id/cos" />
        <Button
            android:text="TAN"
            android:layout_height="@dimen/gridbox"
            android:layout_width="@dimen/gridbox"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@color/button_normal"
            android:textColor="@color/button_text"
            android:id="@+id/tan" />
        <Button
            android:text="i"
            android:layout_height="@dimen/gridbox"
            android:layout_width="@dimen/gridbox"
            android:layout_row="0"
            android:layout_column="3"
            android:background="@color/button_normal"
            android:textColor="@color/button_text"
            android:id="@+id/imaginary" />
        <Button
            android:text="LN"
            android:layout_height="@dimen/gridbox"
            android:layout_width="@dimen/gridbox"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@color/button_normal"
            android:textColor="@color/button_text"
            android:id="@+id/ln" />
        <Button
            android:text="LOG"
            android:layout_height="@dimen/gridbox"
            android:layout_width="@dimen/gridbox"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@color/button_normal"
            android:textColor="@color/button_text"
            android:id="@+id/log" />
        <Button
            android:text="PI"
            android:layout_height="@dimen/gridbox"
            android:layout_width="@dimen/gridbox"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@color/button_normal"
            android:textColor="@color/button_text"
            android:id="@+id/pi" />
        <Button
            android:text="E"
            android:layout_height="@dimen/gridbox"
            android:layout_width="@dimen/gridbox"
            android:layout_row="1"
            android:layout_column="3"
            android:background="@color/button_normal"
            android:textColor="@color/button_text"
            android:id="@+id/e" />
        <Button
            android:text="%"
            android:layout_height="@dimen/gridbox"
            android:layout_width="@dimen/gridbox"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@color/button_normal"
            android:textColor="@color/button_text"
            android:id="@+id/modulus" />
        <Button
            android:text="!"
            android:layout_height="@dimen/gridbox"
            android:layout_width="@dimen/gridbox"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@color/button_normal"
            android:textColor="@color/button_text"
            android:id="@+id/factorial" />
        <Button
            android:text="root"
            android:layout_height="@dimen/gridbox"
            android:layout_width="@dimen/gridbox"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@color/button_normal"
            android:textColor="@color/button_text"
            android:id="@+id/sqrt" />
        <Button
            android:text="^"
            android:layout_height="@dimen/gridbox"
            android:layout_width="@dimen/gridbox"
            android:layout_row="2"
            android:layout_column="3"
            android:background="@color/button_normal"
            android:textColor="@color/button_text"
            android:id="@+id/power" />
        <Button
            android:text="("
            android:layout_height="@dimen/gridbox"
            android:layout_width="@dimen/gridbox"
            android:layout_row="3"
            android:layout_column="0"
            android:background="@color/button_normal"
            android:textColor="@color/button_text"
            android:id="@+id/lparan" />
        <Button
            android:text=")"
            android:layout_height="@dimen/gridbox"
            android:layout_width="@dimen/gridbox"
            android:layout_row="3"
            android:layout_column="1"
            android:background="@color/button_normal"
            android:textColor="@color/button_text"
            android:id="@+id/rparan" />

        <!-- For gridlayout params, see http://developer.android.com/reference/android/widget/GridLayout.LayoutParams.html -->
    </GridLayout>


</LinearLayout>